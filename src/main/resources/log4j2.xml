<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="Dselect - %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.log4j.xml" level="info" />
		<Logger name="sql" level="debug" />
		<Logger name="de.bonprix" level="debug" />
		<Logger name="com.ibatis" level="debug" />
		<Logger name="org.springframework" level="debug" />
		<Logger name="org.mybatis" level="debug" />
		<Logger name="ServletConfiguration" level="debug" />
		<Logger name="RootConfiguration" level="debug" />
		<Logger name="org.jboss.resteasy" level="debug" />
		<Root level="info">
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>
